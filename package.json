{
  "name": "self-healing-microservices",
  "version": "1.0.0",
  "description": "A comprehensive demonstration of building resilient microservices with Circuit Breakers, Bulkheads, and Auto-Recovery patterns",
  "main": "src/services/gateway/index.js",
  "scripts": {
    "start": "node src/services/gateway/index.js",
    "start:gateway": "cross-env SERVICE_NAME=api-gateway node src/services/gateway/index.js",
    "start:user": "cross-env SERVICE_NAME=user-service node src/services/user/index.js",
    "start:payment": "cross-env SERVICE_NAME=payment-service node src/services/payment/index.js",
    "start:order": "cross-env SERVICE_NAME=order-service node src/services/order/index.js",
    "start:notification": "cross-env SERVICE_NAME=notification-service node src/services/notification/index.js",
    "start:monitor": "cross-env SERVICE_NAME=monitor-service node src/services/monitor/index.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:user\" \"npm run start:payment\" \"npm run start:order\" \"npm run start:notification\" \"npm run start:monitor\"",
    "dev": "npm run start:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rimraf logs node_modules/.cache",
    "logs:clear": "rimraf logs/*.log"
  },
  "keywords": [
    "microservices",
    "circuit-breaker",
    "bulkhead",
    "auto-recovery",
    "resilience",
    "fault-tolerance",
    "self-healing",
    "nodejs",
    "javascript",
    "patterns",
    "architecture"
  ],
  "author": "Self-Healing Microservices Demo",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4"
  }
}
